<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingView">
        <attr name="view_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="RecyclerListView">
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GifMoviewView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GifViewTheme">
        <attr name="gifMoviewViewStyle" format="reference" />
    </declare-styleable>



    <style name="Widget.GifMoviewView" parent="@android:style/Widget"></style>

    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="StickyScrollView">
        <attr name="stuckShadowHeight" format="dimension" />
        <attr name="stuckShadowDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ATDragView">
        <attr name="seek_bg_color" format="color" />
        <attr name="seek_pb_color" format="color" />
        <attr name="seek_ball_solid_color" format="color" />
        <attr name="seek_ball_stroke_color" format="color" />
        <attr name="seek_text_color" format="color" />
        <attr name="seek_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AmountView">
        <!-- 左右2边+-按钮的宽度 -->
        <attr name="btnWidth" format="dimension" />
        <!-- 中间TextView的宽度 -->
        <attr name="tvWidth" format="dimension" />
        <!--<attr name="tvColor" format="color"/>-->
        <attr name="tvTextSize" format="dimension"/>
        <attr name="btnTextSize" format="dimension"/>
    </declare-styleable>
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>

    <declare-styleable name="ContactItemView">
        <attr name="contactItemImage" format="reference"/>
        <attr name="contactItemName" format="string"/>
    </declare-styleable>


    <declare-styleable name="EaseConversationList">
        <attr name="cvsListPrimaryTextColor" format="color"/>
        <attr name="cvsListSecondaryTextColor" format="color"/>
        <attr name="cvsListTimeTextColor" format="color"/>
        <attr name="cvsListPrimaryTextSize" format="dimension"/>
        <attr name="cvsListSecondaryTextSize" format="dimension"/>
        <attr name="cvsListTimeTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EaseTitleBar">
        <attr name="titleBarTitle" format="string"/>
        <attr name="titleBarLeftImage" format="reference"/>
        <attr name="titleBarRightImage" format="reference"/>
        <attr name="titleBarBackground" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="EaseChatMessageList">
        <attr name="msgListMyBubbleBackground" format="reference"/>
        <attr name="msgListOtherBubbleBackground" format="reference"/>
        <attr name="msgListShowUserAvatar" format="boolean"/>
        <attr name="msgListShowUserNick" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EaseChatExtendMenu">
        <attr name="numColumns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EaseEmojiconMenu">
        <attr name="bigEmojiconRows" format="integer"/>
        <attr name="emojiconColumns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ClipSquareImageView">
        <attr name="ClipSquareIV_BorderDistance" format="dimension"/>
        <attr name="ClipSquareIV_BorderWidth" format="dimension"/>
        <attr name="ClipSquareIV_BorderColor" format="color"/>
        <attr name="ClipSquareIV_OutsideColor" format="color"/>
    </declare-styleable>

    <style name="ratingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_star_progress_bar</item>
        <item name="android:minHeight">@dimen/dim20</item>
        <item name="android:maxHeight">@dimen/dim20</item>
    </style>
</resources>