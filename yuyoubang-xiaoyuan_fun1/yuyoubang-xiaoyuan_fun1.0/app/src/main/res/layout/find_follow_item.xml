<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.yuyoubang.view.RoundImageView
                android:id="@+id/avatar"
                android:layout_width="49dip"
                android:layout_height="49dip"
                android:layout_margin="10dip"
                app:borderRadius="5dp"
                app:type="round" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dip"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/trip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大先生"
                        android:textColor="@color/color_000000" />

                    <LinearLayout
                        android:id="@+id/bg_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/bg_color_ff9600"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="0.5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="0.5dp">

                        <ImageView
                            android:id="@+id/iv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/sex_men" />

                        <TextView
                            android:id="@+id/trip_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:text="25"
                            android:textColor="@color/color_ffffff" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/trip_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/bg_color_ff9600"
                        android:paddingBottom="0.5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="0.5dp"
                        android:text="北京"
                        android:textColor="@color/color_ffffff" />
                </LinearLayout>


                <TextView
                    android:id="@+id/message_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="12:2-" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="不在乎的目的的旅行不在乎的目的的旅行不在乎的目的的旅行"
            android:textColor="@color/color_505050" />


        <com.yuyoubang.view.MultiImageView
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">


        </com.yuyoubang.view.MultiImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/now_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/gps_icon"
                android:drawablePadding="5dip"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="巴厘岛"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/line"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:background="@mipmap/ic_like" />


            <TextView
                android:id="@+id/tv_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:text="10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:background="@mipmap/ic_comment" />

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:text="10" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="@color/color_f0f0f0" />


    </LinearLayout>

</RelativeLayout>
