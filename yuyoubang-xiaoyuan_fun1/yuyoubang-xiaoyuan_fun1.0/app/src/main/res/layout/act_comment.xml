<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="@color/color_f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:background="@color/color_ff9600"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_pic"
                android:gravity="center|left"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="cyclerAdapter来操作数据内容，给Recycler"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/orde_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="06/20-06/30"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_pic"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="2dip"
                        android:gravity="center"
                        android:paddingLeft="5dip"
                        android:paddingTop="5dip"
                        android:text="¥"
                        android:textColor="@color/color_fc4004" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="13dip"
                        android:layout_toRightOf="@id/rmb"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="380"
                        android:textColor="@color/color_fc4004"
                        android:textSize="18sp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/color_f0f0f0" />

        <RatingBar
            android:id="@+id/full_assess_rating"
            style="@style/ratingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim10"
            android:numStars="5"
            android:stepSize="1" />

        <TextView
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:text="点击来为活动评分"
            android:textColor="@color/color_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="@dimen/dim10"
            android:background="@color/color_f0f0f0" />

        <EditText
            android:id="@+id/tv_feed_back_content"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/color_ffffff"
            android:gravity="left"
            android:hint="亲,请给此活动一个公正评价,便于后来者参与"
            android:lineSpacingExtra="@dimen/txt11"
            android:paddingLeft="@dimen/dim12"
            android:paddingRight="@dimen/dim12"
            android:paddingTop="@dimen/dim15"
            android:scrollbarFadeDuration="2000"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/txt16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/color_f0f0f0" />

        <TextView
            android:id="@+id/tv_click_commit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/go_time_pressed"
            android:gravity="center"
            android:text="发表评论"
            android:textColor="@color/white"
            android:textSize="@dimen/txt18" />

    </LinearLayout>

</ScrollView>
