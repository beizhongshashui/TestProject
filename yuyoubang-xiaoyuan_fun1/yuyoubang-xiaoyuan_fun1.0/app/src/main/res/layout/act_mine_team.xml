<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="@color/color_f0f0f0" />

    <TextView
        android:id="@+id/more_teams"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/icon_teams"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="发现更多有趣小组"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#E0E0E0"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingTop="5dip"
        android:text="我加入的小组"
        android:textColor="#454545" />

    <com.yuyoubang.widget.recycleview.RecyclerListView
        android:id="@+id/lv_lesson_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.yuyoubang.widget.recycleview.RecyclerListView>

</LinearLayout>