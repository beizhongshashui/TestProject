<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/lable_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.yuyoubang.view.CircleImageView
                android:id="@+id/trip_like_pic"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerHorizontal="true"
                android:src="@color/color_ff9600"
                app:civ_border_color="@color/color_ffffff"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/lable_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trip_like_pic"
                android:layout_centerHorizontal="true"
                android:text="大先生"
                android:textColor="#333333"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/add_label_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_add_normal" />

    </FrameLayout>

</LinearLayout>
