<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/fragment_my_bg"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/load_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:text="上传新封面"
                    android:textColor="@color/color_ffffff" />

                <TextView
                    android:id="@+id/editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:text="编辑"
                    android:textColor="@color/color_ffffff" />


                <com.yuyoubang.view.RoundImageView
                    android:id="@+id/mine_avatar"
                    android:layout_width="69dip"
                    android:layout_height="69dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="150dip"
                    app:borderRadius="5dp"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dip"
                    android:layout_marginTop="150dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小源"
                        android:textColor="@color/color_ffffff" />


                    <LinearLayout
                        android:id="@+id/bg_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/bg_color_ff9600"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="0.5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="0.5dp">

                        <ImageView
                            android:id="@+id/iv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/sex_men" />

                        <TextView
                            android:id="@+id/trip_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:text="25"
                            android:textColor="@color/color_ffffff" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/trip_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/bg_color_ff9600"
                        android:paddingBottom="0.5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="0.5dp"
                        android:text="上海"
                        android:textColor="@color/color_ffffff" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="69dp"
                    android:src="@mipmap/ic_user_type"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/is_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="69dp"
                    android:background="@drawable/shape_boeder_color_7dae2a"
                    android:text="实名"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mine_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dip"
                    android:layout_marginTop="205dip"
                    android:text="一直在路上，不吃饭"
                    android:textColor="@color/color_505050" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dip"
                    android:layout_marginTop="175dip"
                    android:orientation="horizontal">

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/id_flowlayout_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingRight="10dp"></com.zhy.view.flowlayout.TagFlowLayout>


                    <TextView
                        android:visibility="visible"
                        android:textSize="10sp"
                        android:id="@+id/login_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="3小时前"
                        android:textColor="@color/color_ffffff" />

                </LinearLayout>

            </FrameLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dip"
                android:background="@color/color_f5f5f5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/dongtai"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_trends_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text=""
                        android:textColor="@color/color_505050" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dip"
                        android:text="动态" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_f5f5f5" />

                <LinearLayout
                    android:id="@+id/care_person"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/mine_follow_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="23"
                        android:textColor="@color/color_505050" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dip"
                        android:text="关注" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_f5f5f5" />

                <LinearLayout
                    android:id="@+id/like"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_fans_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="123"
                        android:textColor="@color/color_505050" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dip"
                        android:text="粉丝" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="@color/color_f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/user_true"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/sel_listview_eeeeee_eaeaea"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:background="@mipmap/fragment_my_authentication" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="实名认证"
                        android:textColor="@color/color_505050" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/apply_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未认证" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/fragment_my_arrow" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/color_f5f5f5" />


                <LinearLayout
                    android:id="@+id/mine_order"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/sel_listview_eeeeee_eaeaea"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:background="@mipmap/fragment_my_orders" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="我的订单"
                        android:textColor="@color/color_505050" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/fragment_my_arrow" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/color_f5f5f5" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dip"
                    android:background="@color/color_f5f5f5" />

                <LinearLayout
                    android:id="@+id/commend_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/sel_listview_eeeeee_eaeaea"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:background="@mipmap/fragment_my_rated" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="我的评价"
                        android:textColor="@color/color_505050" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/fragment_my_arrow" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/business_center"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/sel_listview_eeeeee_eaeaea"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:background="@mipmap/fragment_my_seller_center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="商家中心"
                        android:textColor="@color/color_505050" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/fragment_my_arrow" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dip"
                    android:background="@color/color_f5f5f5" />


                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/sel_listview_eeeeee_eaeaea"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:background="@mipmap/fragment_my_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="设置"
                        android:textColor="@color/color_505050" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/fragment_my_arrow" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/color_f5f5f5" />


                <LinearLayout
                    android:id="@+id/about_ours"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/sel_listview_eeeeee_eaeaea"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:background="@mipmap/fragment_my_about" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="关于我们"
                        android:textColor="@color/color_505050" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/fragment_my_arrow" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
