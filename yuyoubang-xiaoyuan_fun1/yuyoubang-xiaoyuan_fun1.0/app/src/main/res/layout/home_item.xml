<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/news_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_margin="10dip"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_default_trip" />

            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="20dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/apply_user_count"
                android:paddingBottom="1dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="1dip"
                android:text="16人报名"
                android:textColor="@color/color_ffffff" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/news_image"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="5dp"
                android:text="cyclerAdapter来操作数据内容，给Recycler"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="畅游8-10天"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="06/20-06/30"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/news_image"
                android:orientation="horizontal">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/news_image"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:paddingTop="5dip"
                    android:text="¥"
                    android:textColor="@color/color_fc4004" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="13dip"
                    android:layout_toRightOf="@id/rmb"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="380"
                    android:textColor="@color/color_fc4004"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_biz_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="大先生"
                    android:textColor="@color/color_000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="企"
                    android:textColor="@color/color_ff9600"
                    android:textSize="14sp" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/color_f5f5f5" />

</LinearLayout>