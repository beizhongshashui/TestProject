<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="@color/color_f0f0f0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">


        <com.yuyoubang.view.CircleImageView
            android:id="@+id/join_avatar"
            android:layout_width="49dip"
            android:layout_height="49dip"
            android:layout_margin="10dip"
            app:civ_border_color="@color/color_ffffff"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/join_sponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大先生"
            android:textColor="@color/color_000000" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_f0f0f0" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/join_trip_pic"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_margin="10dip"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/join_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="鼓浪屿5天游玩"
                android:textColor="@color/color_000000" />

            <TextView
                android:id="@+id/join_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="06/20-08/28" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fc4004"
                    android:text="￥"
                    android:id="@+id/textView3" />
                <TextView
                    android:id="@+id/join_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="380"
                    android:textColor="@color/color_fc4004"
                    android:textSize="17sp"
                    android:layout_toRightOf="@+id/textView3"
                    android:layout_toEndOf="@+id/textView3" />

                <TextView
                    android:id="@+id/join_apply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:text="报名人数：5人"
                    android:textColor="@color/color_505050" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="@color/color_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color_505050"
            android:text="联系人" />


        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/join_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dip"
            android:background="@null"
            android:hint="方便成功预订后通知你"
            android:gravity="right|center"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color_505050"
            android:text="手机号" />


        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/join_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dip"
            android:background="@null"
            android:hint="请输入手机号"

            android:inputType="number"
            android:gravity="right|center"
            android:maxLength="11"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center|left"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color_505050"
            android:text="报名人数" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:textColor="@color/color_505050"
            android:text="男" />

        <com.yuyoubang.view.AmountView
            android:id="@+id/join_man"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_marginLeft="10dp"
            app:btnTextSize="14sp"
            app:btnWidth="25dip"
            app:tvWidth="25dip"/>

        <View
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:background="@color/color_f0f0f0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_505050"

            android:text="女" />



        <com.yuyoubang.view.AmountView
            android:id="@+id/join_woman"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_marginLeft="10dp"
            app:btnTextSize="14sp"
            app:btnWidth="25dip"
            app:tvWidth="25dip"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/join_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遇游邦活动报名须知" />


        <TextView
            android:id="@+id/sign_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="详细内容>"
            android:textColor="@color/color_5895ed" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="bottom"
        android:background="@color/color_ffffff"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_f0f0f0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="合计：" />

            <TextView
                android:id="@+id/join_price"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textColor="@color/color_fc4004" />

            <TextView
                android:id="@+id/join_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dip"
                android:background="@color/color_ff9600"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_ffffff" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
