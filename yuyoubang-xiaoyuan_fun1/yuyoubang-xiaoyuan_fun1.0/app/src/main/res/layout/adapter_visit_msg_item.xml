<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/foot_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.yuyoubang.view.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_margin="10dip"
                    android:src="@color/color_ff9600" />

                <TextView
                    android:id="@+id/is_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_boeder_color_7dae2a"
                    android:padding="1dp"
                    android:text="实名"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/verification_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:src="@mipmap/ic_user_type"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/trip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大先生"
                        android:textColor="@color/color_000000" />

                    <LinearLayout
                        android:id="@+id/bg_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/bg_color_ff9600"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="0.5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="0.5dp">

                        <ImageView
                            android:id="@+id/iv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/sex_men" />

                        <TextView
                            android:id="@+id/trip_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:text="25"
                            android:textColor="@color/color_ffffff" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/trip_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/bg_color_ff9600"
                        android:paddingBottom="0.5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="0.5dp"
                        android:text="北京"
                        android:textColor="@color/color_ffffff" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:visibility="visible"
                android:id="@+id/tv_send_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="2016-12-19 15:30:24"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/color_f0f0f0" />

    </LinearLayout>

</RelativeLayout>
