<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@mipmap/fragment_my_bg" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="上传新封面"
                android:textColor="@color/color_ffffff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:text="编辑"
                android:textColor="@color/color_ffffff"
                android:visibility="gone" />

            <com.yuyoubang.view.RoundImageView
                android:id="@+id/avatar"
                android:layout_width="69dip"
                android:layout_height="69dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="150dip"
                app:borderRadius="5dp"
                app:type="round" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dip"
                android:layout_marginTop="150dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/other_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小源"
                    android:textColor="@color/color_ffffff" />

                <LinearLayout
                    android:id="@+id/bg_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/bg_color_ff9600"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="0.5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="0.5dp">

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/sex_men" />

                    <TextView
                        android:id="@+id/trip_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:text="25"
                        android:textColor="@color/color_ffffff" />
                </LinearLayout>

                <TextView
                    android:id="@+id/trip_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/bg_color_ff9600"
                    android:paddingBottom="0.5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="0.5dp"
                    android:text="北京"
                    android:textColor="@color/color_ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dip"
                android:layout_marginTop="175dip"
                android:orientation="horizontal">

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_flowlayout_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"></com.zhy.view.flowlayout.TagFlowLayout>


                <TextView
                    android:visibility="visible"
                    android:textSize="11sp"
                    android:id="@+id/tv_time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="3小时前"
                    android:textColor="@color/color_ffffff" />

            </LinearLayout>


            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="90dip"-->
                <!--android:layout_marginTop="175dip"-->
                <!--android:orientation="horizontal">-->

                <!--<com.zhy.view.flowlayout.TagFlowLayout-->
                    <!--android:paddingRight="50dp"-->
                    <!--android:id="@+id/id_flowlayout_two"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:orientation="horizontal"></com.zhy.view.flowlayout.TagFlowLayout>-->

                <!--<TextView-->
                    <!--android:textSize="9sp"-->
                    <!--android:id="@+id/tv_time_ago"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:text="3小时前"-->
                    <!--android:textColor="@color/color_ffffff" />-->

            <!--</LinearLayout>-->

            <ImageView
                android:id="@+id/iv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="69dp"
                android:src="@mipmap/ic_user_type"
                android:visibility="gone" />

            <TextView
                android:id="@+id/is_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="69dp"
                android:background="@drawable/shape_boeder_color_7dae2a"
                android:text="实名"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dip"
                android:layout_marginTop="205dip"
                android:text="一直在路上，不吃饭"
                android:textColor="@color/color_505050" />


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dip"
            android:background="@color/color_f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/action_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="223"
                    android:textColor="@color/color_505050" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dip"
                    android:text="动态" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_f5f5f5" />

            <LinearLayout
                android:background="@drawable/sel_listview_eeeeee_eaeaea"
                android:id="@+id/follow_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="23"
                    android:textColor="@color/color_505050" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dip"
                    android:text="关注" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_f5f5f5" />

            <LinearLayout
                android:background="@drawable/sel_listview_eeeeee_eaeaea"
                android:id="@+id/like_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="123"
                    android:textColor="@color/color_505050" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dip"
                    android:text="粉丝" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
