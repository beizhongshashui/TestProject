<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/color_ff9600"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center|left">

        <TextView
            android:id="@+id/now_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="定位中"
            android:textColor="@color/color_ffffff" />

        <TextView
            android:id="@+id/search"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_weight="1"
            android:background="@drawable/home_search_grey_circle"
            android:drawableLeft="@mipmap/home_serach"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:hint="搜索活动线路/用户昵称"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingTop="5dip"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_ffffff"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/sift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@mipmap/sifting"
            android:textColor="@color/color_ffffff" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="热门"
            android:textColor="@color/color_898989" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="同城"
            android:textColor="@color/color_898989" />


        <LinearLayout
            android:id="@+id/type_layout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="类型"
                android:textColor="@color/color_898989" />

            <ImageView
                android:id="@+id/home_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@mipmap/fragment_home_arrow" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_recent"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最近出发"
            android:textColor="@color/color_898989" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <View
            android:id="@+id/yellow_line1"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/color_ff9600" />

        <View
            android:id="@+id/yellow_line2"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/color_ff9600"
            android:visibility="invisible" />

        <View
            android:id="@+id/yellow_line3"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/color_ff9600"
            android:visibility="invisible" />

        <View
            android:id="@+id/yellow_line4"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/color_ff9600"
            android:visibility="invisible" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frg_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">


    </FrameLayout>
</LinearLayout>
