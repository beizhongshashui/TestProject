<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_btn_popup_windows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/shape_bg_color_ffffff_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_new_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="投诉退款"
                android:textColor="#333333"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@mipmap/x_close" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#eaeaea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="退款金额"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:cursorVisible="true"
                android:id="@+id/et_price"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dp"
                android:autoLink="all"
                android:background="@drawable/shape_bg_fff_0"
                android:maxHeight="72dip"
                android:maxLines="4"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fix"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="退款方式"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_pay_type"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dp"
                android:autoLink="all"
                android:background="@drawable/shape_bg_fff_0"
                android:hint="微信/支付宝"
                android:maxHeight="72dip"
                android:maxLines="4"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="退款账号"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_num"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dp"
                android:autoLink="all"
                android:background="@drawable/shape_bg_fff_0"
                android:maxHeight="72dip"
                android:maxLines="4"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="退款原因"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:gravity="left|top"
                android:id="@+id/et_because"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dp"
                android:autoLink="all"
                android:background="@drawable/shape_bg_fff_0"
                android:maxHeight="72dip"
                android:maxLines="4"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_bg_fff_f7f7f7"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="提交"
            android:textColor="#333333"
            android:textSize="17sp" />

    </LinearLayout>

</RelativeLayout>
